{
    "manifest_version":2,
    "name":"attendance_email",
    "version":"0.1",
    "description":"Extension that generates absence/ late email for you",
    "icons":{
        "16":"attendance.png",
        "48":"attendance.png",
        "125":"attendance.png"
    },
    "action":{
        "default_icon":{
            "16":"attendance.png",
            "24":"attendance.png",
            "32":"attendance.png"
        },
        "default_title":"extension title",
        "default_popup":"popup.html"
    },
    "options_page":"options.html",
    "permissions":["storage","alarms",  "activeTab",
    "tabs",
    "<all_urls>",
    "webRequest", "webRequestBlocking",
    "contextMenus",
    "clipboardWrite"  
],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://perscholas.instructure.com/courses/*/external_tools/12"],
            "js": ["contentScript.js"],
            "run_at": "document_end", 
            "all_frames": true

        },
     
        {
            "matches": ["https://rollcall.instructure.com/sections/1570"],
            "js": ["attendance.js"],
            "css":["contentScript.css"],

            "run_at": "document_end", 
            "all_frames": true

        }
    ]

}